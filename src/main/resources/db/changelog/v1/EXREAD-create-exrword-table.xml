<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="EXREAD-create-exrword-table" author="evv">
        <createTable tableName="exr_word">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="book_id" type="UUID"/>
            <column name="page_num" type="int8"/>
            <column name="line_num" type="int8"/>
            <column name="word_num" type="int8"/>
            <column name="original" type="varchar(128)"/>
            <column name="txt_content" type="varchar(128)"/>
            <column name="grammar" type="varchar(256)"/>
            <column name="info" type="varchar(256)"/>
            <column name="dictionary_id" type="UUID"/>
        </createTable>
    </changeSet>

</databaseChangeLog>